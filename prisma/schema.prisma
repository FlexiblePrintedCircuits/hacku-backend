datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

// 部屋
model Room {
    id          String      @id @default(uuid())
    isActive    Boolean     @default(false)
    changeTimestamo Int     @default(1)
    guests      Guest[]
    themes      Theme[]
    createdAt   DateTime    @default(now())
    updatedAt   DateTime    @updatedAt
}

// 部屋に対する参加者
model Guest {
    id              String      @id @default(uuid())
    name            String
    linkedProject   Room[]
}

// お題
model Theme {
    id              String      @id @default(uuid())
    title           String
    createdUserName   String
    numberOfVotes   Int         @default(0)
    linkedRoom      Room[]
    linkedAnser     Answer[]
}

// 回答
model Answer {
    id              String      @id @default(uuid())
    title           String
    createdUserName   String
    numberOfVotes   Int
    linkedTheme     Theme[]
}